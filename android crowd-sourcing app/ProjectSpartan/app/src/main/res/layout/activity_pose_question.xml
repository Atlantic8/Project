<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@+drawable/full_cover">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:id="@+id/linear_layout_pose_question1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:id="@+id/text_view_text1"
            android:textColor="#ffffff"
            android:text="Time"/>
        <EditText
            android:layout_height="33dp"
            android:layout_width="match_parent"
            android:id="@+id/edit_text_start_time"
            android:background="#ffffff"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:hint="input start time"
            android:layout_below="@+id/text_view_text1" />
        <EditText
            android:layout_height="33dp"
            android:layout_width="match_parent"
            android:id="@+id/edit_text_end_time"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            android:padding="5dp"
            android:hint="input end time"
            android:layout_below="@+id/edit_text_start_time"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_above="@+id/linear_layout_pose_question3"
        android:layout_below="@+id/linear_layout_pose_question1"
        android:id="@+id/linear_layout_pose_question2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:id="@+id/text_view_text2"
            android:textColor="#ffffff"
            android:text="Search Content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:id="@+id/edit_text_question"
            android:layout_below="@+id/text_view_text2"
            android:background="#ffffff"
            android:hint="input search target"
            android:singleLine="false"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear_layout_pose_question3">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/btn_pose_question_submit"/>
    </LinearLayout>

</RelativeLayout>
